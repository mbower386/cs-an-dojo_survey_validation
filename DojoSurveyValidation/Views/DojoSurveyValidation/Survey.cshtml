@using DojoSurveyValidation.Models
@model Survey

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/style.css"/>
    <title>Survey</title>
</head>
<body>
    <div class="survey">
        <h4 class="survey-title">Submitted Info</h4>
        <div class="row">
            <label for="survey-name" class="col-sm-5">Your Name:</label>
            <div class="col-sm-7 survey-name">
                @Model.Name
            </div>
        </div>

        <div class="row survey-location">
            <label for="survey-location" class="col-sm-5">Dojo Location:</label>
            <div class="col-sm-7 survey-location">
               @Model.Location
            </div>
        </div>

        <div class="row survey-language">
            <label for="survey-language" class="col-sm-5">Favorite Language:</label>
            <div class="col-sm-7 survey-language">
               @Model.Language
            </div>
        </div>

        <div class="row survey-comment">
            <label for="survey-comment" class="col-sm-5">Comment:</label>
            <div class="col-sm-7 survey-comment">
               @Model.Comment
            </div>
        </div>

        <div class="form-group back-survey">
            <div class="form-group back-button">
                <a href="/">
                    <button type="button" class="btn btn-primary btn-sm float-right">Go Back</button>
                </a>
            </div>
        </div>

    </div>
</body>
</html>